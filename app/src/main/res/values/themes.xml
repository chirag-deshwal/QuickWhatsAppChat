<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuickWhatsAppChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/brand_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="dailText">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/buttonColour</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>

    </style>




    <!-- Animation for Dialog -->
    <style name="bottomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/slideUpDownAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/brandColor1</item>
    </style>

    <!-- Just useful top showing on the top. -->
    <style name="slideUpDownAnimation">
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
    </style>

</resources>